<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="50dp"
    android:layout_marginHorizontal="50dp"
    app:barrierMargin="300dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="650dp"
        android:layout_marginHorizontal="50dp"
        android:background="#FAF9F9"
        android:backgroundTint="#FBFAFA"
        android:orientation="vertical"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/Grade"
            android:layout_width="175dp"
            android:layout_height="70dp"
            android:layout_margin="25dp"
            android:background="#03A9F4"
            android:text="Grade Calculator"
            android:textAlignment="center"
            android:textColor="#170B0B"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/quiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#513333"
            android:backgroundTint="#D4EDF8"
            android:ems="10"
            android:hint="Quizes 15%"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/homework"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#FFFFFF"
            android:backgroundTint="#CDECFA"
            android:ems="10"
            android:hint="Homework 25%"
            android:inputType="number"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/midterm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#FFFFFF"
            android:backgroundTint="#CDECFA"
            android:ems="10"
            android:hint="Midterms 30%"
            android:inputType="number"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/finals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#FFFFFF"
            android:backgroundTint="#CDECFA"
            android:ems="10"
            android:hint="Final 30%"
            android:inputType="number"
            android:textAlignment="center" />

        <Button
            android:id="@+id/Calcu"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:text="Calculate" />

        <Button
            android:id="@+id/reset"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="45dp"
            android:shadowColor="#F4F1F1"
            android:text="Reset"
            android:textAlignment="center"
            android:textColorHighlight="#F8F5F5"
            android:textColorLink="#BF3333"
            app:strokeColor="#F3F0F0"
            tools:ignore="OnClick" />

        <TextView
            android:id="@+id/res"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_marginTop="100dp"
            android:background="#F3F2F1"
            android:text="Result"
            android:textAlignment="center"
            android:textColor="#C50909"
            android:textSize="24sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>